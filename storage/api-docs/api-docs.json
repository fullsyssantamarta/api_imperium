{
    "openapi": "3.0.0",
    "info": {
        "title": "Configuracion de empresa",
        "version": "ubl2.1"
    },
    "servers": [
        {
            "url": "/api/ubl2.1"
        }
    ],
    "paths": {
        "/config/{nit}/{dv}": {
            "summary": "Crear empresa",
            "parameters": [
                {
                    "name": "nit",
                    "in": "path",
                    "description": "NIT de la Empresa",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                },
                {
                    "name": "dv",
                    "in": "path",
                    "description": "Digito de verificacion de la empresa",
                    "required": false,
                    "schema": {
                        "type": "integer"
                    }
                }
            ]
        },
        "/config/software": {
            "summary": "Crear o actualizar software"
        }
    },
    "components": {
        "securitySchemes": {
            "Bearer": {
                "type": "http",
                "description": "Token de acceso que se debe incluir en el encabezado Authorization.",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}